-- Crear una pantalla de anuncio
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Crear el primer fragmento del texto (blanco)
local textLabel1 = Instance.new("TextLabel")
textLabel1.Parent = screenGui
textLabel1.Text = "[New title unlocked:"
textLabel1.Size = UDim2.new(0.5, 0, 0.1, 0)
textLabel1.Position = UDim2.new(0.2, 0, -0.2, 0)  -- Inicialmente fuera de la pantalla (más arriba)
textLabel1.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Blanco
textLabel1.BackgroundTransparency = 1
textLabel1.TextScaled = true
textLabel1.Font = Enum.Font.SourceSansSemibold  -- Fuente más gruesa que SourceSans
textLabel1.TextSize = 20  -- Texto más pequeño

-- Crear el segundo fragmento del texto (rojo) con un solo espacio
local textLabel2 = Instance.new("TextLabel")
textLabel2.Parent = screenGui
textLabel2.Text = " YouTuber]"  -- Un solo espacio antes de "YouTuber"
textLabel2.Size = UDim2.new(0.3, 0, 0.1, 0)
textLabel2.Position = UDim2.new(0.515, 0, -0.2, 0)  -- Inicialmente fuera de la pantalla (más arriba)
textLabel2.TextColor3 = Color3.fromRGB(255, 0, 0)  -- Rojo
textLabel2.BackgroundTransparency = 1
textLabel2.TextScaled = true
textLabel2.Font = Enum.Font.SourceSansSemibold  -- Fuente más gruesa que SourceSans
textLabel2.TextSize = 20  -- Texto más pequeño

-- Animación: Desplazar los textos hacia su posición final
local tweenService = game:GetService("TweenService")

-- Configuración del tween para el primer texto (aparición)
local tweenInfo1 = TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
local goal1 = {Position = UDim2.new(0.2, 0, 0.05, 0)}  -- Posición final más arriba

-- Crear y jugar el tween para el primer texto
local tween1 = tweenService:Create(textLabel1, tweenInfo1, goal1)
tween1:Play()

-- Configuración del tween para el segundo texto (aparición)
local tweenInfo2 = TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
local goal2 = {Position = UDim2.new(0.515, 0, 0.05, 0)}  -- Posición final más arriba

-- Crear y jugar el tween para el segundo texto
local tween2 = tweenService:Create(textLabel2, tweenInfo2, goal2)
tween2:Play()

-- Esperar 7 segundos antes de desaparecer los textos
wait(7)

-- Animación de desaparición: Desplazar los textos hacia la derecha
-- Hacer la animación más rápida ajustando el tiempo a 0.5 segundos
local tweenInfo1Disappear = TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.In)
local goal1Disappear = {Position = UDim2.new(1.5, 0, 0.05, 0)}  -- Desplazar el primer texto hacia la derecha fuera de la pantalla

local tweenInfo2Disappear = TweenInfo.new(0.5, Enum.EasingStyle.Quint, Enum.EasingDirection.In)
local goal2Disappear = {Position = UDim2.new(1.5, 0, 0.05, 0)}  -- Desplazar el segundo texto hacia la derecha fuera de la pantalla

-- Crear y jugar el tween de desaparición para el primer texto
local tween1Disappear = tweenService:Create(textLabel1, tweenInfo1Disappear, goal1Disappear)
tween1Disappear:Play()

-- Crear y jugar el tween de desaparición para el segundo texto
local tween2Disappear = tweenService:Create(textLabel2, tweenInfo2Disappear, goal2Disappear)
tween2Disappear:Play()

-- Esperar a que la animación de desaparición termine
wait(0.5)

-- Eliminar ambos textos
textLabel1:Destroy()
textLabel2:Destroy()
